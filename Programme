        static void Main(string[] args)
        {
            // Exercice 1 : Somme d'un tableau  
            
            // Tableau d'entiers
 
            int [] UserArray = ReturnArray();
            

           // Somme du tableau
            Console.WriteLine("Sum of you array : ");
